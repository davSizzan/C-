@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="Demo Project">
    <title>Sign Up</title>
    <link rel="stylesheet" href="bt2.css">
    <script src="https://kit.fontawesome.com/9ed593a796.js" crossorigin="anonymous"></script>
    <style>
        body {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            font-family: sans-serif;
        }

        .page-wrapper {
            width: 100vw;
            height: 100vh;
            margin: auto;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

            .page-wrapper > * {
                padding: 25px;
            }

        td {
            padding: 5px;
            color: whitesmoke;
        }

            td:first-child {
                text-align: right;
            }

                td:first-child::after {
                    content: ':';
                }

            td:nth-child(2) {
                width: 350px;
            }

            td:nth-child(3) {
                width: 25px;
            }

            td > input[type='text'],
            td > select,
            td > textarea {
                width: 100%;
                padding-left: 3px;
            }

            td > input[type='text'],
            td > select {
                height: 22px;
            }

        input[type=text], input[type='tel'] {
            width: 40%;
            padding: 12px 20px;
            box-sizing: border-box;
        }

        input [type=radio] {
            width: 40%;
            padding: 12px 20px;
            box-sizing: border-box;
        }

        input[type=text]:focus {
            background-color: lightblue;
        }

        select {
            width: 40%;
            border: none;
            border-radius: 4px;
            background-color: #f1f1f1;
        }

        input[type=submit] {
            background-color: #58257b;
            color: white;
            padding: 15px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-bottom: 50px;
        }

            input[type=submit]:hover, .button:hover {
                background-color: #45a049;
            }

        .button {
            appearance: button;
            box-sizing: border-box;
            text-decoration: none;
            color: initial;
            background-color: #5EEAAD;
            color: white;
            padding: 10px 30px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin: 10px 20px;
        }

        .select {
            background: transparent;
            border: none;
            font-size: 14px;
            height: 29px;
            padding: 5px;
            width: 268px;
            color: #fff;
        }

        .option {
            color: #333;
        }

        body {
            height: 100%;
            width: auto;
            background-image: url('/Images/img_5.jpg');
            background-size: 100% 100%;
            background-attachment: fixed;
            background-repeat: no-repeat;
            color: #FFFFFF;
        }

        .box {
            position: relative;
            max-width: 600px;
            padding: 50px;
            box-shadow: 0 5px 15px rgba(0,0,0,.5);
            overflow: hidden;
            color: #000;
        }

            .box h1 {
                position: relative;
                margin: 0 0 20px;
                padding: 0;
                text-transform: uppercase;
                z-index: 2;
                text-align: center;
                font-size: 40px;
                margin-bottom: 10px;
                box-sizing: border-box;
                color: #FFFFFF;
            }

        .submit {
            display: flex;
            justify-content: space-between;
        }
    </style>
</head>
<body>

    <section class="page-wrapper">
        <div class="box">
            @using (Html.BeginForm())
            { 
        <form name="frmAccount" action="acb.jsp">

            <h1><b>Thông tin đăng kí</b></h1>
            <table>
                <tr>
                    <td><b>Tên đăng kí: </b></td>
                    <td><input type="text" name="username" id="username" required></td>
                    <td><span class="check check1"></span></td>
                </tr>
                <tr>
                    <td><b>Mật khẩu</b></td>
                    <td><input type="password" name="password" id="password" required></td>
                    <td><span class="check"></span></td>
                </tr>
                <tr>
                    <td><b>Họ tên:</b> </td>
                    <td><input type="text" name="truename" id="truename" placeholder="Điền họ tên"></td>
                    <td><span class="check"></span></td>
                </tr>
                <tr>
                    <td><b>Email</b></td>
                    <td><input type="text" name="email" id="email" required placeholder="ex...gmail.com"></td>
                    <td><span class="check"></span></td>
                </tr>
                <tr>
                    <td><b>Số điện thoại </b></td>
                    <td><input type="text" name="phone" id="phone" required placeholder="+84"></td>
                    <td><span class="check"></span></td>
                </tr>
                <tr>
                <tr>
                    <td><b>Giới tính</b></td>
                    <td>
                        <input type="radio" name="gender" id="male">
                        <label><b>Nam</b></label>
                        <input type="radio" name="gender" id="female">
                        <label><b>Nữ</b></label>
                        <input type="radio" name="gender" id="other">
                        <label><b>Khác</b></label>
                    </td>
                    <td><span class="check"></span></td>
                </tr>
                <tr>
                    <td><b>Năm sinh</b></td>
                    <td><input type="date" name="namsinh" id="date" required placeholder="Không quá năm nay"></td>
                    <td><span class="check"></span></td>
                </tr>
                <tr>
                    <td><b>Địa chỉ</b></td>
                    <td><textarea name="diachi" id="content1" rows="5"></textarea></td>
                    <td><span class="check"></span></td>
                </tr>
            </table>


        </form>}
            <div class="submit">
                <a><button class="button" onclick="checkAll()">Hoàn tất đăng kí </a>
                <a href="/Home"><button class="button">Trở lại</button></a>

            </div>
        </div>

    </section>




    <script src=""></script>
</body>
</html>